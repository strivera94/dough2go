<%= form_with url: sessions_create_path, class: "px-4 py-3" do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "email@example.com" %>
  </div>

  <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password %>
  </div>
  <%= form.submit "Sign in", class: "btn btn-primary" %>
<% end %>


