<!-- vars i should access to product_id, and the current cusomter should be set in controller -->
<%= form_with model: @cart_item, url: cart_index_path, remote: true do |form| %>
  <%= form.hidden_field(:product_id, value: locals.first[:product_id]) %>
  <%= form.select :quantity, 1..12, class: "custom-select" %>
  <%= form.submit "Add to Cart", class: "btn btn-primary" %>
<% end %>